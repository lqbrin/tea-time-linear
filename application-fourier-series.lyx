noprefix "false"

\end_inset

),
\begin_inset Formula 
\[
\sin\left(\frac{m\pi}{L}t\right)\sin\left(\frac{n\pi}{L}t\right)=\frac{1}{2}\left[\cos\left((m-n)\frac{\pi}{L}t\right)-\cos\left((m+n)\frac{\pi}{L}t\right)\right]
\]

\end_inset

so
\begin_inset Formula 
\begin{align*}
\left\langle \sin\left(\frac{m\pi}{L}t\right),\sin\left(\frac{n\pi}{L}t\right)\right\rangle  & =\int_{0}^{L}\sin\left(\frac{m\pi}{L}t\right)\sin\left(\frac{n\pi}{L}t\right)dt\\
 & =\frac{1}{2}\int_{0}^{L}\left[\cos\left((m-n)\frac{\pi}{L}t\right)-\cos\left((m+n)\frac{\pi}{L}t\right)\right]dt\\
 & =\frac{1}{2}\left[\frac{L}{\pi(m-n)}\sin\left((m-n)\frac{\pi}{L}t\right)-\frac{L}{\pi(m+n)}\sin\left((m+n)\frac{\pi}{L}t\right)\right]_{0}^{L}\\
 & =0.
\end{align*}

\end_inset


