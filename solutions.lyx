\begin_inset Formula 
\[
\left[\begin{array}{ccc}
41 & -6 & -5\\
-3 & 1 & -1\\
-2 & 0 & 1
\end{array}\right]\left[\begin{array}{c}
a\\
b\\
c
\end{array}\right]=\left[\begin{array}{c}
1\\
0\\
0
\end{array}\right]
\]

\end_inset

