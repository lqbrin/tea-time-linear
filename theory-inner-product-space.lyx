Let 
\begin_inset Formula $\mathbf{u}=u_{1},u_{2},\ldots,u_{n}$
\end_inset

, 
\begin_inset Formula $\mathbf{v}=v_{1},v_{2},\ldots,v_{n}$
\end_inset

, 
\begin_inset Formula $\mathbf{w}=w_{1},w_{2},\ldots,w_{n}$
\end_inset

 be arbitrary elements of 
\begin_inset Formula $\mathbb{R}^{n}$
\end_inset

.
 Then 
\begin_inset Formula 
\begin{align*}
(\mathbf{u}+\mathbf{w})\bcdot\mathbf{v} & =(u_{1},u_{2},\ldots,u_{n}\ +\ w_{1},w_{2},\ldots,w_{n})\ \bcdot\ v_{1},v_{2},\ldots,v_{n}\\
 & =u_{1}+w_{1},u_{2}+w_{2},\ldots,u_{n}+w_{n}\ \bcdot\ v_{1},v_{2},\ldots,v_{n}\\
 & =(u_{1}+w_{1})v_{1}+(u_{2}+w_{2})v_{2}+\cdots+(u_{n}+w_{n})v_{n}\\
 & =u_{1}v_{1}+w_{1}v_{1}+u_{2}v_{2}+w_{2}v_{2}+\cdots+u_{n}v_{n}+w_{n}v_{n}\\
 & =(u_{1}v_{1}+u_{2}v_{2}+\cdots+u_{n}v_{n})+(w_{1}v_{1}+w_{2}v_{2}+\cdots+w_{n}v_{n})\\
 & =\mathbf{u}\bcdot\mathbf{v}+\mathbf{w}\bcdot\mathbf{v}
\end{align*}

\end_inset

and
\begin_inset Formula 
\begin{align*}
(c\mathbf{u})\bcdot\mathbf{v} & =(c\ \times\ u_{1},u_{2},\ldots,u_{n})\ \bcdot\ v_{1},v_{2},\ldots,v_{n}\\
 & =(cu_{1},cu_{2},\ldots,cu_{n})\ \bcdot\ v_{1},v_{2},\ldots,v_{n}\\
 & =cu_{1}v_{1}+cu_{2}v_{2}+\cdots+cu_{n}v_{n}\\
 & =c(u_{1}v_{1}+u_{2}v_{2}+\cdots+u_{n}v_{n})\\
 & =c(\mathbf{u}\bcdot\mathbf{v}).
\end{align*}

\end_inset


